{
	"name": "pwabuilder-extension",
	"displayName": "PWABuilder Extension",
	"publisher": "PWABuilderTeam",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.ServiceWorker.start",
		"onCommand:extension.manifest.start"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.ServiceWorker.start",
				"title": "PWABuilder - Generate Service Worker"
			},
			{
				"command": "extension.manifest.start",
				"title": "PWABuilder - Generate Manifest"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "dev": "parcel watch src/webview-app/*.html --out-dir out --public-url .",
		"build": "parcel build src/webview-app/*.html --out-dir out --public-url ."
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"parcel-bundler": "^1.12.3",
		"parcel-plugin-inliner": "^1.0.10",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"@types/node-fetch": "^2.3.7",
		"adm-zip": "^0.4.13",
		"create-object-url": "^1.0.2",
		"image-size": "^0.7.4",
		"lit-element": "^2.2.0",
		"lit-html": "^1.1.1",
		"node-fetch": "^2.6.0",
		"prismjs": "^1.17.1",
		"request": "^2.88.0",
		"revoke-object-url": "^1.0.2",
		"select-pure": "^0.2.0",
		"tmp": "^0.1.0",
		"unzipper": "^0.10.4",
		"upath": "^1.1.2"
	},
	"configuration": {
		"properties": {
			"tslint.jsEnable": {
				"scope": "resource"
			}
		}
	}
}
